<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1.0">
	<persistence-unit name="mysql-testpu" transaction-type="RESOURCE_LOCAL">
		<provider>org.apache.openjpa.persistence.PersistenceProviderImpl
		</provider>
		<class>com.learn.intermediate.jpa.Customer</class>
		<class>com.learn.intermediate.jpa.Invoice</class>
		<class>com.learn.intermediate.jpa.Order</class>
		<properties>
			<property name="openjpa.ConnectionURL" value="jdbc:mysql://localhost:3306/test" />
			<property name="openjpa.ConnectionDriverName" value="com.mysql.jdbc.Driver" />
			<property name="openjpa.ConnectionUserName" value="hiren" />
			<property name="openjpa.ConnectionPassword" value="root" />
			<property name="openjpa.Log" value="SQL=TRACE" />
		</properties>
	</persistence-unit>
</persistence>